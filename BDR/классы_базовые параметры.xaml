<Window x:Class="BDR.классы_базовые_параметры"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDR"
        mc:Ignorable="d"
        Title="Базовые параметры" Height="300" Width="338.73">
    <Grid>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="331">
            <MenuItem Header="Добавить"/>
            <MenuItem Header="Изменить"/>
            <MenuItem Header="Удалить"/>
            <MenuItem Header="Обновить"/>
        </Menu>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="24" Margin="0,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="331"/>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="220" Margin="0,49,0,0" VerticalAlignment="Top" Width="331">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                    <GridViewColumn Width="100" Header="Обозначение"/>
                    <GridViewColumn Width="120" Header="Описание"/>
                    <GridViewColumn Width="100" Header="Отбор значения"/>
                </GridView>
            </ListView.View>
            <ScrollViewer Height="100" Width="100"/>
        </ListView>

    </Grid>
</Window>
