        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="21" Margin="92,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181"/>
        <TextBox IsReadOnly="True" Height="15" Grid.Column="0" TextWrapping="Wrap" VerticalAlignment="Top" Margin="92,85,46,0" />
        <Button Content="..." VerticalAlignment="Top" Height="15" Margin="246,85,19,0"/>
        <TextBox   x:Name="textBox1" VerticalScrollBarVisibility ="Visible" HorizontalAlignment="Left" Height="83" Margin="92,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181"/>

    </Grid>
</Window>


