        <Button Content="..." VerticalAlignment="Top" Height="17" Margin="246,127,30,0"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="134,165,0,0" VerticalAlignment="Top" Width="128" Height="14"/>
        <TextBox x:Name="textBox_Copy2" HorizontalAlignment="Left" Height="20" Margin="134,191,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="128" TextChanged="textBox_Copy2_TextChanged"/>

    </Grid>
